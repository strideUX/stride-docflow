{
  "name": "@strideux/docflow",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "bin": {
    "docflow": "./dist/bin/docflow.mjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/bin/docflow.ts",
    "lint": "node ./node_modules/eslint/bin/eslint.js . --ext .ts,.tsx,.mts,.cts",
    "format": "prettier --write .",
    "smoke": "npm run build && AI_DRY_RUN=true node dist/bin/docflow.mjs",
    "postbuild": "chmod +x dist/bin/docflow.mjs || true"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "latest",
    "@clack/prompts": "latest",
    "ai": "latest",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^10.0.0",
    "fs-extra": "latest",
    "gray-matter": "latest",
    "openai": "latest",
    "picocolors": "latest",
    "yaml": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "prettier": "latest",
    "tsup": "latest",
    "tsx": "latest",
    "typescript": "latest"
  }
}
